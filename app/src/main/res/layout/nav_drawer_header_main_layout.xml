<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:backgroundTint="@color/quantum_grey200"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/nav_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        app:srcCompat="@mipmap/ic_launcher_foreground"
        android:contentDescription="@string/contentDescription_CampusLogo" />

    <ImageView
        android:id="@+id/nav_title"
        android:layout_width="314dp"
        android:layout_height="22dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/ic_title_dark"
        android:contentDescription="@string/contentDescription_CampusTitle" />

</LinearLayout>

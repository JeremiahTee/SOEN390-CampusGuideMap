<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calendar_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardElevation="4dp"
    app:contentPadding="3dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_calendar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/event_title_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/event_date_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"

            android:maxWidth="@dimen/calendar_event_card_max_text_width"
            android:textAppearance="?attr/textAppearanceListItemSecondary"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/event_location_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:drawableStart="@drawable/ic_location_on_black_24dp"
            android:maxWidth="@dimen/calendar_event_card_max_text_width"
            android:background="?selectableItemBackgroundBorderless"
            android:textAppearance="?attr/textAppearanceListItemSecondary"
            android:textColor="@color/white"
        />

    </LinearLayout>

    <ImageButton
        android:id="@+id/navigateFromEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:background="?selectableItemBackgroundBorderless"
        android:contentDescription="@string/navigate"
        android:paddingEnd="15dp"
        android:src="@drawable/ic_directions_60dp"
        tools:ignore="RtlSymmetry" />


</androidx.cardview.widget.CardView>







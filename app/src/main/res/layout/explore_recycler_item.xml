<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/explore_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardElevation="4dp"
    app:contentPadding="3dp"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_color2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/place_title_item"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/place_rating_item"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="0dp"
            android:maxWidth="@dimen/calendar_event_card_max_text_width"
            android:textAppearance="?attr/textAppearanceListItemSecondary"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <RatingBar
            android:id="@+id/rating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="0dp"
            android:isIndicator="true"
            android:numStars="5"
            android:progressTint="#FFFFFF"
            android:stepSize="0.1" />

        <TextView
            android:id="@+id/place_location_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:drawableStart="@drawable/ic_location_on_black_24dp"
            android:maxWidth="@dimen/calendar_event_card_max_text_width"
            android:textAppearance="?attr/textAppearanceListItemSecondary" />


    </LinearLayout>

    <ImageView
        android:id="@+id/place_image"
        android:layout_width="66dp"
        android:layout_height="60dp"
        android:layout_gravity=""
        android:contentDescription="place_image"
        android:scaleType="centerCrop" />


</androidx.cardview.widget.CardView>
